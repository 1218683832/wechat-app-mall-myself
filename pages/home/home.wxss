/* pages/home/home.wxss */

.container {
  background-color: #f2f2f2;
  min-height: 100%;
  display: block;
}

.goods-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding-top: 24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.goods-box {
  width: 339rpx;
  height: 472rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.img-box .image {
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}

.goods-box .goods-title {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  color: #000;
  margin-top: 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.goods-box .goods-price{
  width: 280rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0;
  color:#e64340;
  margin-left: 24rpx;
}
